{
    "name": "sam/bulletinfusion",
    "description": "PHP bulletin board system",
    "type": "project",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "BulletinFusion\\": "application/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BulletinFusion\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "samwilcox",
            "email": "sam@bulletinfusion.com"
        }
    ],
    "require": {
        "vlucas/phpdotenv": "^5.6",
        "ezyang/htmlpurifier": "^4.17",
        "twig/twig": "^3.6"
    },
    "config": {
        "vendor-dir": "application/Vendor"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.3"
    }
}
